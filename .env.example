# B-Plus POS Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@localhost:5432/bplus_pos
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password
PGDATABASE=bplus_pos

# WooCommerce Integration (Optional - for live store sync)
WOOCOMMERCE_URL=https://your-store.com
WOOCOMMERCE_CONSUMER_KEY=ck_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
WOOCOMMERCE_CONSUMER_SECRET=cs_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Session Security (Required)
SESSION_SECRET=your-super-secret-session-key-minimum-32-characters

# Application Environment
NODE_ENV=development
PORT=5000

# Email Configuration (Optional - for receipts)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx